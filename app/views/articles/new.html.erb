<%= form_with model: Article.new, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: t('article.title')  %>
  <%= form.file_field :image %>
  <%= form.label :content %>
  <%= form.text_area :body, placeholder: t('article.content')  %>
  <%= form.label :categories %>
  <%= form.select(
                  :categories,
                  @categories.collect {|category| [ category.name, category.id ]},
                  {},
                  { multiple: true, id: 'categories' })
  %>
  <%= form.submit value: t('article.create') %>
<% end %>
