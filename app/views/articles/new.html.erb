<%= form_with model: Article.new do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: 'Title' %>
  <%= form.label :content %>
  <%= form.text_area :body, placeholder: 'Content' %>
  <%= form.label :categories %>
  <%= form.select(:categories, Category.all.collect {|c| [ c.name, c.id ] }, {}, { multiple: true, id: 'Categories' })%>
  <%= form.submit value: 'Create Article'%>
<% end %>
