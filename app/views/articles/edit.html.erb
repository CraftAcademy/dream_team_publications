<h1>Edit article</h1>

<%= form_with model: @article do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, value: @article.title, placeholder: 'Title' %>
  <%= form.label :content %>
  <%= form.text_area :body, value: @article.body ,placeholder: 'Content' %>
  <%= form.submit value: 'Submit Changes'%>
<% end %>
