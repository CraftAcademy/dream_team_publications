<h1>Edit article</h1>

<%= form_with model: @article do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, value: @article.title %>
  <%= form.label :content %>
  <%= form.text_area :body, id: 'article_content', value: @article.body %>
  <%= form.label :categories %>
  <%= form.select(:categories, Category.all.collect {|c| [ c.name, c.id ] }, {}, { multiple: true, id: 'Categories' })%>
  <%= form.submit value: 'Submit Changes' %>
<% end %>
