<h1><%= @article.title %></h1>
<% if @article.image.attachment %>
  <%= image_tag @article.image, width: '250' %>
<% end %>
<p><%= @article.body %></p>

<%= form_with model: [@article, Comment.new], local: true do |form| %>
  <%= form.label :comment %>
  <%= form.text_field :body, id: 'comment_comment', placeholder: 'Write a comment' %>
  <%= form.submit value: t('article.comment') %>
<% end %>

<% if @article.comments.any? %>
  <% @article.comments.each do |comment| %>
    <p><%= comment.body %></p>
  <% end %>
<% end %>

<% if @article.categories.any? %>
  <% @article.categories.each do |category| %>
    <p><%= category.name %></p>
  <% end %>
<% end %>

<%= link_to t('article.delete') , article_path(@article), method: :delete %>
<%= link_to t('article.edit') , edit_article_path(@article) %>
