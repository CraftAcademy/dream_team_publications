<%= @article.title %>
<%= @article.body %>


<%= form_with model: Comment.new, local: true do |form| %>
  <%= form.label :comment %>
  <%= form.text_field :body, id: 'comment_comment', placeholder: 'Write a comment' %>
  <%= form.submit value: 'Add Comment'%>
<% end %>

<%= link_to 'Delete Article', article_path(@article), method: :delete %>
