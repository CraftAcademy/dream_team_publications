<!DOCTYPE html>
<html>
  <head>
    <title>Dreamteam</title>
    <%= csrf_meta_tags %>
    <% if Rails.env.test? %>
      <%= tag.meta id: :fake_position, content: fake_location %>
    <% end %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-env="<%= Rails.env %>" data-geocoded="<%= @geocoded %>">
    <% flash.each do |key, value| %>
      <%= value %>
    <% end %>

    <%= render 'layouts/nav' %>

    <%= yield %>
  </body>
</html>
